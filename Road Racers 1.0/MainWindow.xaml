<Window x:Class="Road_Racers_1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Road_Racers_1._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="GameScreen" Focusable="True" KeyUp="KeyboardUp" KeyDown="KeyboardDown">
            <Rectangle Canvas.Left="150" Canvas.Top="276" Fill="Red" Width="50" Height="50" x:Name="Player" ></Rectangle>
            <Rectangle x:Name="Motors" Fill="Blue" Width="50" Height="50" Canvas.Left="95" Canvas.Top="107" HorizontalAlignment="Left" VerticalAlignment="Center"  ></Rectangle>
            <Rectangle Canvas.Top="207" Height="5" Width="801" Fill="Black" HorizontalAlignment="Left" VerticalAlignment="Center"></Rectangle>
            <Image Source="Bike.png" Width="50" Height="50" Canvas.Top="107" x:Name="Motor" Canvas.Left="150"/>
        </Canvas>
    </Grid>
</Window>

